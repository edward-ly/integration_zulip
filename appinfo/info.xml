    <bugs>https://github.com/nextcloud/integration_mattermost/issues</bugs>
    <screenshot>https://github.com/nextcloud/integration_mattermost/raw/master/img/screenshot1.jpg</screenshot>
    <dependencies>
        <nextcloud min-version="22" max-version="25"/>
